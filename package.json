{
  "name": "auto-libs",
  "version": "0.3.4-beta.0",
  "description": "凹凸 公用组件",
  "main": "build/index",
  "types": "build/index",
  "repository": "git@github.com:aotuzuche/auto-libs.git",
  "author": "atzuche <www.atzuche.com>",
  "license": "MIT",
  "sideEffects": [
    "*.css",
    "*.scss",
    "build/scripts/**/*"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development PACKAGE=development node scripts/start.js",
    "build": "npm run lint && cross-env NODE_ENV=production PACKAGE=production node scripts/build.js",
    "release": "sh scripts/release.sh",
    "commit": "git-cz",
    "test": "jest --no-cache",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prettier": "prettier -c --write '**/*'",
    "lint": "npm run lint:ts",
    "lint-staged": "lint-staged",
    "lint:ts": "tsc --build tsconfig.build.json && node node_modules/tslint/bin/tslint -c ./tslint.json -p ./tsconfig.build.json",
    "prepublish": "npm run lint && npm run test",
    "np": "np --yolo --no-yarn",
    "npb": "np 0.3.4-beta.0 --yolo --no-yarn --tag=beta"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node scripts/verify-commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "build",
    "types"
  ],
  "dependencies": {
    "at-js-sdk": "^2.2.60",
    "axios": "^0.18.0",
    "js-cookie": "^2.2.0",
    "qs": "^6.5.2",
    "weixin-js-sdk": "^1.4.0-test"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/js-cookie": "^2.2.2",
    "@types/node": "^10.12.18",
    "@types/react": "^16.9.41",
    "babel-jest": "^24.8.0",
    "commitizen": "^3.0.5",
    "conventional-changelog": "^3.0.5",
    "conventional-changelog-cli": "^2.0.11",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^3.0.0",
    "git-cz": "^1.8.0",
    "gulp": "^4.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "merge2": "^1.2.3",
    "np": "^5.1.3",
    "prettier": "^1.18.2",
    "react": "^16.13.1",
    "tslint": "^5.20.0",
    "tslint-config-alloy": "^0.2.1",
    "typescript": "^3.2.2"
  },
  "peerDependencies": {
    "react": ">=16.10.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
